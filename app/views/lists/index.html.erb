<div class="container">
  <div class="banner">
    <div class="banner_image" style="background-image: url('<%= image_path "cinema.jpeg" %>')">
    <div class="cover mb-4 d-flex align-items-center justify-content-center">
      <div class="text-center text-white" style="margin-top: 50px;font-weight: bold;">
        <h1 style="font-weight: bold;">Create lists of your favourite movies</h1>
        <h3 class="typed-js" data-controller="typed-js"></h3>
      </div>
    </div>
  </div>
  <br>
  <div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">My Lists</h3>
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
    </div>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 col-sm-6 col-md-4 mb-3">
          <%= link_to list_path(list), class:"text-decoration-none" do %>
            <div class="card-category" data-aos="zoom-in">
              <%= list.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
